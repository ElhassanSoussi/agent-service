# Agent Service Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# REQUIRED FOR PRODUCTION
# =============================================================================

# Admin API key - required to manage tenants and API keys
# Generate with: openssl rand -hex 32
AGENT_ADMIN_KEY=change_me_admin_key

# Secret for hashing API keys (HMAC-SHA256)
# Generate with: openssl rand -hex 32
AGENT_KEY_HASH_SECRET=change_me_hash_secret

# =============================================================================
# OPTIONAL
# =============================================================================

# Legacy single API key (for backwards compatibility)
# Leave empty to require per-tenant keys
AGENT_API_KEY=

# Database path (default: ./data/jobs.db in Docker, ./jobs.db locally)
AGENT_DB_PATH=/app/data/jobs.db

# =============================================================================
# LLM CONFIGURATION (Optional)
# =============================================================================

# Planner mode: "rules" (default) or "llm"
AGENT_PLANNER_MODE=rules

# LLM provider: "ollama" (local), "openai", or "anthropic"
# For self-hosted: use "ollama" with local Ollama server
LLM_PROVIDER=

# LLM base URL (for Ollama - default: http://127.0.0.1:11434)
LLM_BASE_URL=http://127.0.0.1:11434

# LLM model (default: llama3.1 for Ollama, gpt-4o-mini for OpenAI)
LLM_MODEL=llama3.1

# LLM API key (only required for OpenAI/Anthropic, NOT needed for Ollama)
LLM_API_KEY=

# LLM timeout in seconds (default: 20, increase for slow local models)
LLM_TIMEOUT_S=60

# =============================================================================
# AGENT IDENTITY (Phase 21)
# =============================================================================

# Agent name displayed in UI and /meta endpoint
AGENT_NAME=Xone by Elhassan Soussi

# Default system prompt for agent conversations
AGENT_SYSTEM_PROMPT_DEFAULT=You are Xone, an AI assistant created by Elhassan Soussi. When asked about your name or who you are, always respond that your name is 'Xone by Elhassan Soussi'. Be concise, accurate, and helpful.

# =============================================================================
# BUILDER MODE (Phase 12)
# =============================================================================

# GitHub Personal Access Token (optional, for higher rate limits)
# Create at: https://github.com/settings/tokens
# Required scopes: public_repo (or repo for private repos)
GITHUB_TOKEN=

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Generate strong random keys for production:
#    openssl rand -hex 32
#
# 2. Never commit this file with real values
#
# 3. In production, use Docker secrets or environment injection
#
# 4. Rotate AGENT_KEY_HASH_SECRET periodically (invalidates all API keys)
#
# 5. Keep AGENT_ADMIN_KEY separate from regular API keys
